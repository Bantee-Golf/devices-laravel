{
    "name": "emedia/devices-laravel",
    "description": "Package for device authentication",
    "type": "library",
    "license": "proprietary",
    "authors": [
		{
			"name": "Elegant Media",
			"email": "info@elegantmedia.com.au"
		}
    ],
    "require": {
        "php": "^8.0",
        "elegantmedia/oxygen-foundation": "^2.0"
    },
	"require-dev": {
        "emedia/laravel-test-kit": "^2.0",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
	"autoload": {
		"psr-4": {
			"EMedia\\Devices\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\": "laravel/app",
			"Tests\\": "tests/"
		},
		"files": [
			"vendor/mockery/mockery/library/helpers.php",
			"vendor/elegantmedia/oxygen-foundation/tests/Traits/MocksScoutEngines.php"
		]
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
    "repositories": [
		{
			"type": "vcs",
			"url": "git@bitbucket.org:elegantmedia/laravel-test-kit.git"
		}
	],
	"config": {
		"sort-packages": true
	},
	"scripts": {
		"test": "phpunit",
		"check-style": "phpcs src tests",
		"fix-style": "phpcbf src tests"
	},
    "extra": {
        "laravel": {
            "providers": [
				"EMedia\\Devices\\DevicesServiceProvider"
            ]
        }
    }
}
